{
  "appId": "com.pumpgym.dashboard",
  "files": ["dist-electron/**/*", "dist-react/**/*"],
  "icon": "./pump.jpg",
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },

  "win": {
    "target": ["portable"],
    "verifyUpdateCodeSignature": false
  },
  "asar": false,
  "extraResources": [
    "dist-electron/preload.cjs",
    "src/assets/**",
    {
      "from": "node_modules/.prisma/client",
      "to": "prisma/.prisma"
    },
    {
      "from": "node_modules/@prisma/client",
      "to": "prisma/@prisma/client"
    },
    {
      "from": "prisma/data.db",
      "to": "prisma/data.db"
    }
  ]
}
