{
  "appId": "com.pumpgym.dashboard",
  "files": [
    "dist-electron/**/*",
    "dist-react/**/*",
    "package.json",
    {
      "from": "node_modules/.prisma",
      "to": "node_modules/.prisma",
      "filter": ["**/*"]
    },
    "node_modules/@prisma/client/**/*"
  ],
  "icon": "./pump.jpg",
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },
  "win": {
    "target": ["portable"]
  },
  "extraResources": [
    "dist-electron/preload.cjs",
    "src/assets/**",
    {
      "from": "prisma/data.db",
      "to": "prisma/data.db"
    }
  ],
  "asarUnpack": ["node_modules/@prisma/**/*", "node_modules/.prisma/**/*"]
}
