{
  "appId": "com.pumpgym.dashboard",
  "files": ["dist-electron/**/*", "dist-react/**/*"],
  "icon": "./pump.jpg",
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage",
    "category": "Utility"
  },

  "win": {
    "target": ["msi", "portable"]
  },
  "extraResources": [
    "dist-electron/preload.cjs",
    "src/assets/**",
    "prisma/**/*",
    "node_modules/.prisma/**/*",
    "node_modules/@prisma/client/**/*"
  ]
}
